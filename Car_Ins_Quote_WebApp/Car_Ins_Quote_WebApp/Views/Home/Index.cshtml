@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 class="text-center">Welcome to Superquote Insurance!</h1>
    <p class="text-center">Delivering SUPER savings, SUPER fast, since 2019!</p>
</div>

<div class="no-gutters m-3">
    <div class="card mx-auto shadow">
        <div class="card-header text-center">
            <h2 class="text-center">Please fill out the form below to receive your insurance quote:</h2>
        </div>
        <div class="card-body">
            <!--Denotes use of HomeController method GetQuote().-->
            @using (Html.BeginForm("GetQuote", "Home", FormMethod.Post))
            {
            <div class="container align-self-md-center">
                <form class="form-inline justify-content-center">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <h4 class="m-0">First Name</h4>
                            <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                        </div>
                        <div class="form-group col-md-6">
                            <h4>Last Name</h4>
                            <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <h4>Email Address</h4>
                            <!--Most boxes use "text" input, however special inputs were used for some form boxes, specifically "email" for EmailAddress,
                                "date" for DateOfBirth, "number" for CarYear and SpeedingTickets, and "option" for DUI and FullCoverage.-->
                            <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                        </div>

                        <div class="form-group col-md-6">
                            <h4>Date of Birth</h4>
                            <input name="DateOfBirth" type="date" class="form-control" placeholder="Date of Birth" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <h4>Car Make</h4>
                            <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                        </div>

                        <div class="form-group col-md-6">
                            <h4>Car Model</h4>
                            <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <h4>Car Year</h4>
                            <input name="CarYear" type="number" class="form-control" placeholder="Car Year" />
                        </div>

                        <div class="form-group col-md-6">
                            <h4>Have you ever had a DUI?</h4>
                            <select name="DUI" class="form-control">
                                <option>No</option>
                                <option>Yes</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <h4>Any speeding tickets?</h4>
                            <input name="SpeedingTickets" type="number" class="form-control" placeholder="Number of Tickets" />
                        </div>

                        <div class="form-group col-md-6">
                            <h4>Would you like full coverage?</h4>
                            <select name="FullCoverage" class="form-control">
                                <option>No</option>
                                <option>Yes</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            }
        </div>
    </div>
</div>